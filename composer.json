{
    "name": "remzikocak/inertiajs-tables-laravel-query-builder",
    "description": "Inertia.js Front-end Components for Spatie's Laravel Query Builder",
    "homepage": "https://github.com/remzikocak/inertiajs-tables-laravel-query-builder",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Remzi Kocak",
            "email": "hey@remzikocak.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^10.0|^11.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.8",
        "inertiajs/inertia-laravel": "^1.0",
        "orchestra/testbench": "^9.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "ProtoneMedia\\LaravelQueryBuilderInertiaJs\\": "php"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ProtoneMedia\\LaravelQueryBuilderInertiaJs\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "php-cs-fixer": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php --verbose"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "ProtoneMedia\\LaravelQueryBuilderInertiaJs\\InertiaTableServiceProvider"
            ]
        }
    }
}
